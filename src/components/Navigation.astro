---
/**
 * Navigation Component
 *
 * Fixed navigation bar with logo and menu items.
 * Uses data from blog-posts.js for menu configuration.
 */

import { navItems } from "../data/blog-posts.js";
import logo from "../assets/LogoMark.svg";
---

<nav class="nav">
	<a href="/" class="nav__logo" aria-label="Go to home page">
		<img
			src={logo.src}
			alt="Wash Your Bowls Logo"
			class="nav__logo-image"
		/>
	</a>
	<ul class="nav__menu">
		{
			navItems.map((item, index) => (
				<>
					<li>
						<a href={item.href}>{item.label}</a>
					</li>
					{index < navItems.length - 1 && <li class="nav__separator">/</li>}
				</>
			))
		}
	</ul>
</nav>

<style>
	/* Navigation */
	.nav {
		height: var(--nav-height);
		border-bottom: 2px solid var(--color-border);
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 var(--container-padding);
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background-color: var(--color-bg);
		z-index: 1000;
	}

	.nav__logo {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
		text-decoration: none;
		cursor: pointer;
		transition: opacity var(--transition-base);
	}

	.nav__logo:hover {
		opacity: 0.7;
	}

	.nav__logo-image {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.nav__menu {
		display: flex;
		gap: var(--spacing-sm);
		list-style: none;
		font-size: var(--font-size-meta);
		font-weight: 500;
		letter-spacing: 0.05em;
		flex-wrap: wrap;
		justify-content: flex-end;
	}

	.nav__menu li {
		display: flex;
		align-items: center;
	}

	.nav__menu a {
		color: var(--color-text-primary);
		text-decoration: none;
		transition: color var(--transition-base);
		padding: var(--spacing-xs);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.nav__menu a:hover {
		color: var(--color-accent);
	}

	.nav__separator {
		color: var(--color-text-secondary);
		user-select: none;
		padding: 0 var(--spacing-xs);
	}

	/* Mobile Optimization */
	@media (max-width: 480px) {
		.nav__menu {
			gap: var(--spacing-xs);
		}

		.nav__separator {
			padding: 0 2px;
		}

		.nav__menu a {
			padding: var(--spacing-xs) 4px;
		}
	}

	/* Desktop Styles */
	@media (min-width: 769px) {
		.nav__logo {
			width: 48px;
			height: 48px;
		}

		.nav__menu {
			gap: var(--spacing-md);
		}

		.nav__separator {
			padding: 0 var(--spacing-xs);
		}

		.nav__menu a {
			padding: var(--spacing-xs);
		}
	}
</style>
