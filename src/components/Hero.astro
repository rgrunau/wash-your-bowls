---
/**
 * Hero Component
 *
 * Large typographic hero section with the site title and tagline.
 * Uses site configuration data for content.
 */

import { siteConfig } from "../data/blog-posts.js";
---

<section class="hero" id="home">
	<div class="hero__content">
		<h1 class="hero__title">ASKESIS</h1>
		<p class="hero__pronunciation">{siteConfig.tagline}</p>
		<p class="hero__definition">{siteConfig.definition}</p>
	</div>
</section>

<style>
	/* Hero Section - Mobile First */
	.hero {
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--container-padding);
		padding-top: calc(var(--nav-height) + var(--spacing-lg));
		padding-bottom: var(--spacing-2xl);
		position: relative;
	}

	.hero__content {
		width: 100%;
		max-width: var(--max-width-content);
		position: relative;
	}

	.hero__title {
		font-size: var(--font-size-hero);
		font-weight: 800;
		line-height: 0.95;
		letter-spacing: -0.02em;
		margin: 0 0 var(--spacing-xl) 0;
		text-align: left;
	}

	.hero__pronunciation {
		font-size: clamp(16px, 3vw, 20px);
		font-weight: 400;
		color: var(--color-text-secondary);
		margin: 0 0 var(--spacing-sm) 0;
		text-align: left;
	}

	.hero__definition {
		font-size: clamp(16px, 3vw, 20px);
		font-weight: 400;
		font-style: italic;
		color: var(--color-text-secondary);
		margin: 0;
		text-align: left;
	}

	/* Very Small Screens (320-374px) */
	@media (max-width: 374px) {
		.hero {
			min-height: 85vh;
		}

		.hero__title {
			font-size: clamp(40px, 14vw, 56px);
		}
	}

	/* Small Mobile (375-480px) */
	@media (min-width: 375px) and (max-width: 480px) {
		.hero__title {
			font-size: clamp(48px, 15vw, 64px);
		}
	}

	/* Large Mobile/Tablet (481-768px) */
	@media (min-width: 481px) and (max-width: 768px) {
		.hero {
			min-height: 95vh;
		}
	}

	/* Desktop Styles (769px+) */
	@media (min-width: 769px) {
		.hero {
			min-height: 100vh;
			padding-top: var(--nav-height);
		}

		.hero__title {
			margin-bottom: var(--spacing-2xl);
		}

		.hero__pronunciation {
			font-size: 24px;
			margin-bottom: var(--spacing-md);
		}

		.hero__definition {
			font-size: 24px;
		}
	}
</style>
