---
/**
 * Hero Component
 *
 * Large typographic hero section with the site title and tagline.
 * Uses site configuration data for content.
 */

import { siteConfig } from "../data/blog-posts.js";
---

<section class="hero" id="home">
	<div class="hero__content">
		<h1 class="hero__title">
			<span class="hero__title-line hero__title-line--1">Wash</span>
			<span class="hero__title-line hero__title-line--2">YOUR</span>
			<span class="hero__title-line hero__title-line--3">BOWLS</span>
		</h1>
		<div class="hero__tagline">
			{siteConfig.tagline.map((word) => <span>{word}</span>)}
		</div>
	</div>
</section>

<style>
	/* Hero Section - Mobile First */
	.hero {
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--container-padding);
		padding-top: calc(var(--nav-height) + var(--spacing-lg));
		padding-bottom: var(--spacing-2xl);
		position: relative;
	}

	.hero__content {
		width: 100%;
		max-width: var(--max-width-content);
		position: relative;
	}

	.hero__title {
		font-size: var(--font-size-hero);
		font-weight: 800;
		line-height: 0.95;
		letter-spacing: -0.02em;
		margin: 0;
	}

	.hero__title-line {
		display: block;
	}

	.hero__title-line--1 {
		text-align: left;
		margin-bottom: var(--spacing-md);
	}

	.hero__title-line--2 {
		text-align: center;
		color: var(--color-accent);
		margin-bottom: var(--spacing-md);
	}

	.hero__title-line--3 {
		text-align: right;
		margin-bottom: var(--spacing-xl);
	}

	.hero__tagline {
		font-weight: 500;
		letter-spacing: 0.15em;
		color: var(--color-text-secondary);
		text-align: center;
		text-transform: uppercase;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--spacing-xs);
		margin-top: var(--spacing-xl);
		margin: 0 auto;
	}

	.hero__tagline span {
		display: inline-block;
		font-size: 50px;
	}

	/* Very Small Screens (320-374px) */
	@media (max-width: 374px) {
		.hero {
			min-height: 85vh;
		}

		.hero__title {
			font-size: clamp(40px, 14vw, 56px);
		}

		.hero__tagline {
			font-size: 11px;
			letter-spacing: 0.12em;
		}
	}

	/* Small Mobile (375-480px) */
	@media (min-width: 375px) and (max-width: 480px) {
		.hero__title {
			font-size: clamp(48px, 15vw, 64px);
		}
	}

	/* Large Mobile/Tablet (481-768px) */
	@media (min-width: 481px) and (max-width: 768px) {
		.hero {
			min-height: 95vh;
		}

		.hero__title-line--1,
		.hero__title-line--2 {
			margin-bottom: var(--spacing-lg);
		}

		.hero__title-line--3 {
			margin-bottom: var(--spacing-2xl);
		}

		.hero__tagline {
			font-size: 14px;
			flex-direction: row;
			gap: var(--spacing-sm);
			margin-top: var(--spacing-2xl);
		}
	}

	/* Desktop Styles (769px+) */
	@media (min-width: 769px) {
		.hero {
			min-height: 100vh;
			padding-top: var(--nav-height);
		}

		.hero__title-line--1 {
			margin-bottom: var(--spacing-lg);
		}

		.hero__title-line--2 {
			margin-bottom: var(--spacing-lg);
		}

		.hero__title-line--3 {
			margin-bottom: var(--spacing-3xl);
		}

		.hero__tagline {
			flex-direction: row;
			gap: var(--spacing-md);
			margin-top: var(--spacing-4xl);
		}
	}
</style>
